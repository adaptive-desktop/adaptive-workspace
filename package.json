{
  "name": "@adaptive-desktop/adaptive-workspace",
  "version": "0.7.0",
  "description": "Framework-agnostic workspace layout manager for adaptive desktop applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "docs": "typedoc src/index.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "keywords": [
    "workspace",
    "layout-manager",
    "adaptive-desktop",
    "viewport",
    "framework-agnostic",
    "typescript",
    "desktop-layout",
    "workspace-management"
  ],
  "author": "Adaptive Desktop Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:adaptive-desktop/adaptive-workspace.git"
  },
  "dependencies": {
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-util": "^30.0.5",
    "prettier": "^3.0.0",
    "rollup": "^3.29.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.9.0+sha512.5f5f00843eae735dfab6f0442524603e987ceca55e98b36eb0120f4e58908e5b1406545321e46627dca97d15d562f23dc13fb96cabd4e6bc92d379f619001e4e"
}
